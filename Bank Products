--SQL was used to query the Bank Products database and find spacific information.
SELECT *
FROM bank_products
LIMIT 5
;

--Only product names
SELECT product_name
FROM bank_products
;

--Product type is checkin or savings
SELECT product_name
FROM bank_products
WHERE product_type ='Checking'
OR product_type = 'Savings'
;

--another way to get product type of only checking and savings
SELECT product_name, product_type
FROM bank_products
WHERE product_type
IN ('Checking', 'Savings')
;

-- options that are not checking or savings
SELECT product_name, product_type
FROM bank_products
WHERE product_type
NOT IN ('Checking', 'Savings')
;

--Savings acct w/ good intrest rate and no monthly fee
SELECT product_name
FROM bank_products
WHERE product_type = 'Savings'
AND interest_rate >= 0.75
AND monthly_fee = 0
;

--only for youth
SELECT product_name, interest_rate
FROM bank_products
WHERE product_name LIKE '%Youth%'
;

--Looking for specific accts
SELECT product_name, description
FROM bank_products
WHERE product_name
IN ('Premium Checking', 'High Yield Savings', 'Platinum Credit Card', 'Gold Credit Card')
;

--Products that have to do with buissness
SELECT product_name, description
FROM bank_products
WHERE product_name LIKE '%Business%'
;

--Accts that come with rewards
SELECT product_name, description
FROM bank_products
WHERE product_name LIKE '%Rewards%'
OR description LIKE '%Rewards%'
;
